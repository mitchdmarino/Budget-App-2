{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --watch src --ext ts --exec \"node --loader ts-node/esm src/index.ts\"",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate:create": "node-pg-migrate -f migration.config.json create",
    "migrate:up": "npx dotenv-cli -e .env -- node-pg-migrate -f migration.config.json up",
    "migrate:down": "npx dotenv-cli -e .env -- node-pg-migrate -f migration.config.json down"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.1",
    "@types/pg": "^8.16.0",
    "dotenv-cli": "^11.0.0",
    "node-pg-migrate": "^8.0.4",
    "nodemon": "^3.1.11",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
